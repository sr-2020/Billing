@model Billing.Dto.Shop.ShopViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Управление магазином</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
</head>
<body>
    <header>
        <h2>@Model.Name</h2>
        <nav class="nav">
            @Html.ActionLink("Базовая информация", "Details", "Shop", new { shop = Model.Id }, new { @class = "nav-link" })
            @Html.ActionLink("Переводы", "Transfers", "Shop", new { shop = Model.Id }, new { @class = "nav-link" })
            @Html.ActionLink("Контракты", "Contracts", "Shop", new { shop = Model.Id }, new { @class = "nav-link" })
            @Html.ActionLink("Доступные товары", "Available", "Shop", new { shop = Model.Id }, new { @class = "nav-link" })
            @Html.ActionLink("Распечатать QR", "Print", "Shop", new { shop = Model.Id }, new { @class = "nav-link" })
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
    </footer>

    <script src="~/js/jquery-3.5.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
