@model Billing.DTO.ProductTypeDto

@{
    ViewData["Title"] = "Editpt";
    Layout = "_Layout";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editpt" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="ProductTypeId" class="form-control" hidden />
            </div>
            <p>
                @Html.DisplayNameFor(model => model.ProductTypeName)
            </p>
            <div class="form-group">
                @Html.EditorFor(model => model.ProductTypeName)
            </div>
            <p>
                @Html.DisplayNameFor(model => model.DiscountType)
            </p>
            <div class="form-group">
                @Html.EditorFor(model => model.DiscountType)
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Назад", "ProductList", "admin")
</div>

